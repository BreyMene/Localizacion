@page
@model asp_presentacion.Pages.Ventanas.UsuariosModel
@{
    ViewData["Titulo"] = "Usuarios";
}

<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>
                    Usuarios
                </h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary" disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Cedula" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Contrasena" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Rol" />
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>
                        Usuario
                    </h3>

                    <div>
                        <!-- Campo Cedula del Usuario -->
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cedula
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCedula"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cedula" />
                            </div>
                        </div>
                        <!-- Campo Nombre del Usuario -->
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <!-- Campo Contrasena del Usuario -->
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Contrasena
                            </label>
                            <div class="col-lg-6">
                                <input id="nmContrasena"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Contrasena" />
                            </div>
                        </div>
                        <!-- Campo Rol del Usuario -->
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Rol
                            </label>
                            <div class="col-lg-6">
                                <select id="nmRol"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Rol"
                                        asp-items="@(new SelectList(Model.Roles, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>
                            <h4 align="left">
                                ¿Desea borrar el Usuario?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Nombre
                            </h6>
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas || Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre" class="cts_forms form-control" asp-for="@Model.Filtro!.Nombre" placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Cedula
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Contrasena
                            </th>
                            <th>
                                Rol
                            </th>
                            <th>
                                Accion
                            </th>
                        </tr>

                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var Usuario in Model.Lista)
                            {
                                <tr>
                                    <td class="cl_hidden">
                                        @Usuario.Cedula
                                    </td>
                                    <td class="cl_hidden">
                                        @Usuario.Nombre
                                    </td>
                                    <td class="cl_hidden">
                                        @Usuario.Contrasena
                                    </td>
                                    <td>
                                        @Model.ConvertirRol(Usuario.Rol)
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@Usuario.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@Usuario.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>